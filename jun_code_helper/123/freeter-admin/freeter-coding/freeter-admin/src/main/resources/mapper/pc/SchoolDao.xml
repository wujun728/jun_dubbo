<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.freeter.modules.pc.dao.SchoolDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.freeter.modules.pc.entity.SchoolEntity" id="schoolMap">
        <result property="schoolId" column="school_id"/>
        <result property="schoolName" column="school_name"/>
        <result property="sort" column="sort"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.freeter.modules.pc.entity.vo.SchoolVO" >
		SELECT * FROM t_school  school         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.freeter.modules.pc.entity.vo.SchoolVO" >
		SELECT  school.* FROM t_school  school 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.freeter.modules.pc.entity.view.SchoolView" >

		SELECT  school.* FROM t_school  school 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.freeter.modules.pc.entity.view.SchoolView" >
		SELECT * FROM t_school  school <where> 1=1 ${ew.sqlSegment}</where>
	</select>
</mapper>